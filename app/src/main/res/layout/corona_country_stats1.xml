<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/covid_lyt"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_margin="@dimen/px_10.0_dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/px_15.0_dp"
            app:cardBackgroundColor="@android:color/holo_orange_light"
            app:cardElevation="@dimen/px_4.0_dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:weightSum="1"
                    android:layout_marginVertical="@dimen/px_5.0_dp"
                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/px_15.0_dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardElevation="@dimen/px_4.0_dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:orientation="vertical">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:layout_marginHorizontal="@dimen/px_10.0_dp"
                            android:layout_marginVertical="@dimen/px_4.0_dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight=".4"
                                android:layout_height="@dimen/px_30.0_dp"
                                android:text="Country: "
                                android:gravity="start|center"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_18_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                />
                            <TextView
                                android:id="@+id/country_name"
                                android:layout_width="0dp"
                                android:layout_weight=".6"
                                android:layout_height="match_parent"
                                android:text=""
                                android:gravity="start|center"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_18_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:layout_marginHorizontal="@dimen/px_10.0_dp"
                            android:layout_marginVertical="@dimen/px_4.0_dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight=".4"
                                android:layout_height="@dimen/px_30.0_dp"
                                android:text="Total cases:"
                                android:gravity="start|center"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_18_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                />
                            <TextView
                                android:id="@+id/total_cases"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="match_parent"
                                android:text=""
                                android:gravity="start|center"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_18_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"

                                />

                            <ImageView
                                android:id="@+id/dropdown"
                                android:layout_width="0dp"
                                android:layout_weight=".1"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_pull_down_64_1"
                                android:gravity="start|center"


                                android:paddingHorizontal="@dimen/px_5.0_dp"

                                />


                        </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/all_details"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/px_10.0_dp"
                        app:cardCornerRadius="@dimen/px_15.0_dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardElevation="@dimen/px_4.0_dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/px_110.0_dp"
                                android:layout_height="wrap_content"
                                android:text="@string/new_cases"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_14_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                            <TextView
                                android:id="@+id/new_cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_14_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/px_110.0_dp"
                                android:layout_height="wrap_content"
                                android:text="@string/active_cases"
                                android:fontFamily="@font/semibold"
                                android:padding="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:textSize="@dimen/px_14_sp"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                            <TextView
                                android:id="@+id/active_cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/semibold"
                                android:padding="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:textSize="@dimen/px_14_sp"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/px_110.0_dp"
                                android:layout_height="wrap_content"
                                android:text="@string/critical_cases"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_14_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                            <TextView
                                android:id="@+id/critical_cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_14_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="@dimen/px_110.0_dp"
                                android:layout_height="wrap_content"
                                android:text="@string/recovered_cases"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_14_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                            <TextView
                                android:id="@+id/recovered_cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_14_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                        </LinearLayout>

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/px_30.0_dp"
                                android:text="Deaths Report"
                                android:gravity="center|start"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_18_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="@dimen/px_110.0_dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_deaths"
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                                <TextView
                                    android:id="@+id/total_deaths"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="@dimen/px_110.0_dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/new_deaths"
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                                <TextView
                                    android:id="@+id/new_deaths"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                            </LinearLayout>


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/px_30.0_dp"
                                android:text="Today Tests "
                                android:gravity="center|start"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_18_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="@dimen/px_110.0_dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_tests"
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                                <TextView
                                    android:id="@+id/total_tests"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                            </LinearLayout>

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/px_30.0_dp"
                                android:text="Date "
                                android:gravity="center|start"
                                android:fontFamily="@font/semibold"
                                android:textSize="@dimen/px_18_sp"
                                android:paddingHorizontal="@dimen/px_5.0_dp"
                                android:textColor="@android:color/holo_orange_light"
                                android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                android:layout_marginVertical="@dimen/px_4.0_dp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/px_110.0_dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/day"
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                                <TextView
                                    android:id="@+id/day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"

                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/px_110.0_dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:fontFamily="@font/semibold"
                                    android:textSize="@dimen/px_14_sp"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:textColor="@android:color/holo_orange_light"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp" />

                                <TextView
                                    android:id="@+id/time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/px_10.0_dp"
                                    android:layout_marginVertical="@dimen/px_4.0_dp"
                                    android:fontFamily="@font/semibold"
                                    android:paddingHorizontal="@dimen/px_5.0_dp"
                                    android:text=""
                                    android:textColor="@android:color/holo_orange_light"
                                    android:textSize="@dimen/px_10_sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>







                </LinearLayout>

<!--                <ImageView-->
<!--                    android:id="@+id/covid_mask_icon"-->
<!--                    android:layout_gravity="center|right"-->
<!--                    android:layout_marginRight="@dimen/px_15.0_dp"-->
<!--                    android:layout_width="@dimen/px_80.0_dp"-->
<!--                    android:layout_height="@dimen/px_80.0_dp"-->
<!--                    android:src="@android:color/transparent"/>-->
            </FrameLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>