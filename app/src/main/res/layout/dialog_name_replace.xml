<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_15.0_dp"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/px_2.0_dp"
                android:textColor="@color/white"
                android:textSize="@dimen/px_25_sp"
                android:fontFamily="@font/semibold"
                android:text="Please enter the name here." />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2.0_dp"
        android:background="@drawable/insta_gradient_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100.0_dp"
        android:background="@color/color1"
        android:gravity="center"

        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/px_20.0_dp"
            android:background="@drawable/rounder_ended"
            android:layout_height="@dimen/px_70.0_dp"
            android:gravity="start|center"
            android:singleLine="true"
            android:padding="@dimen/px_15.0_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/px_25_sp"
            android:fontFamily="@font/semibold"
            android:hint="Please enter name" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1.0_dp"
        android:background="@drawable/insta_gradient_2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60.0_dp"
        android:weightSum="1"
        android:background="@color/color1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/rounder_ended_1"
            android:layout_height="@dimen/px_40.0_dp"
            android:gravity="center"
            android:paddingRight="@dimen/px_2.0_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/px_20_sp"
            android:fontFamily="@font/semibold"
            android:text="CANCEL" />


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/rounder_ended_1"
            android:layout_height="@dimen/px_40.0_dp"
            android:gravity="center"
            android:paddingRight="@dimen/px_2.0_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/px_20_sp"
            android:fontFamily="@font/semibold"
            android:text="OK" />

    </LinearLayout>


</LinearLayout>