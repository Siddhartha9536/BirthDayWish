<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/px_5.0_dp"
    app:cardBackgroundColor="@color/gray_text"
    app:cardCornerRadius="@dimen/px_4.0_dp"
    app:cardElevation="@dimen/px_5.0_dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/gray_text"
                android:layout_height="@dimen/px_260.0_dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_200.0_dp"
                        android:contentDescription="@string/news_header"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imag3" />
                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@color/green_color_button"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_height="@dimen/px_60.0_dp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_100.0_dp"
                        android:layout_gravity="bottom"
                        android:paddingHorizontal="@dimen/px_10.0_dp"
                        android:id="@+id/caption"
                        android:text=""
                        android:gravity="bottom"
                        android:textColor="@color/white"
                        android:fontFamily="@font/semibold"
                        android:textSize="@dimen/_12sdp"
                        />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/px_10.0_dp"
                android:paddingVertical="@dimen/px_5.0_dp"
                android:background="@color/gray_text"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:gravity="start|center"
                        android:layout_gravity="start|center"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/grey_80" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ByLine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:fontFamily="@font/mazzardh_regular"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_text"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingHorizontal="@dimen/px_10.0_dp"
                    android:paddingVertical="@dimen/px_5.0_dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/grey_80" />


                </LinearLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/px_5.0_dp"
                    android:paddingHorizontal="@dimen/px_15.0_dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/brief"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/mazzardh_regular"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black" />
                </ScrollView>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>