<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.images.activities.ShowImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/close_image"
            android:elevation="@dimen/px_15.0_dp"
            android:layout_width="@dimen/px_100.0_dp"
            android:layout_height="@dimen/px_50.0_dp"
            app:cardCornerRadius="@dimen/px_15.0_dp"
            android:background="@color/gray_text"
            app:cardBackgroundColor="@color/gray_text"
            android:layout_marginTop="@dimen/px_20.0_dp"
            android:layout_marginHorizontal="@dimen/px_10.0_dp">

            <TextView
                android:layout_gravity="end"
                android:gravity="center"
                android:padding="@dimen/px_10.0_dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/semibold"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:layout_height="@dimen/px_50.0_dp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:text="Close" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/px_15.0_dp"
            android:elevation="@dimen/px_15.0_dp"
            android:background="@color/gray_text"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_margin="@dimen/px_10.0_dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/live_news"
            android:scaleType="fitXY"
            android:id="@+id/full_image"/>

        </androidx.cardview.widget.CardView>





    </LinearLayout>


</LinearLayout>
