<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/px_15.0_dp"
    app:cardBackgroundColor="@color/gray_text"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_200.0_dp"
            android:src="@color/gray_text"
            android:scaleType="centerCrop"
            android:id="@+id/image" />
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/green_color_button"
            style="?android:attr/progressBarStyleSmall"
            android:layout_height="@dimen/px_60.0_dp"
            android:visibility="visible" />
    </FrameLayout>

</androidx.cardview.widget.CardView>

